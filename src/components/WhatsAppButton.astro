---
import whatsappIcon from '../../assets/icons/whatsapp.png';
---

<!-- WhatsApp Floating Button -->
<div class="fixed bottom-4 right-4 sm:bottom-6 sm:right-6 z-50">
  <a 
    href="https://wa.me/573143799537?text=Hola%20DAR%20Casa%20de%20la%20Perfumería,%20me%20interesa%20conocer%20más%20sobre%20sus%20fragancias" 
    target="_blank" 
    rel="noopener noreferrer"
    class="group flex items-center justify-center w-14 h-14 sm:w-16 sm:h-16 transition-all duration-300 hover:scale-110 animate-pulse-periodic"
  >
    <img 
      src={whatsappIcon.src} 
      alt="WhatsApp" 
      class="w-full h-full object-contain"
    />
    
    <!-- Tooltip - Hidden on mobile -->
    <div class="hidden sm:block absolute right-20 top-1/2 transform -translate-y-1/2 bg-slate-900 text-white text-sm px-3 py-2 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap">
      ¡Consulta por WhatsApp!
      <div class="absolute right-0 top-1/2 transform translate-x-1 -translate-y-1/2 w-0 h-0 border-l-4 border-l-slate-900 border-t-4 border-t-transparent border-b-4 border-b-transparent"></div>
    </div>
  </a>
</div>

<style>
  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }
  
  @keyframes pulse-periodic {
    0%, 90% {
      transform: scale(1);
      opacity: 1;
    }
    95% {
      transform: scale(1.1);
      opacity: 0.8;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
  
  .animate-pulse-periodic {
    animation: pulse-periodic 4s ease-in-out infinite;
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
