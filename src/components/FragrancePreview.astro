---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import FragranceGallery from '../components/FragranceGallery.astro';
import { Heart, Clock, Droplets, Sparkles, MessageCircle } from 'lucide-react';
import whatsappIcon from '../../assets/icons/whatsapp.png';

export interface Props {
  fragrance: {
    id: string;
    name: string;
    displayName: string;
    gender: 'masculino' | 'femenino' | 'unisex';
    category: 'oriental' | 'amaderado' | 'floral' | 'fresco' | 'frutal' | 'especiado';
    imagePath: string;
    images: string[];
    notesImages: string[];
    hasImages: boolean;
  };
  currentFilter?: string;
}

const { fragrance, currentFilter } = Astro.props;
const genderText = fragrance.gender === 'masculino' ? 'Masculina' : fragrance.gender === 'femenino' ? 'Femenina' : 'Unisex';
---

<main class="min-h-screen pt-20">

  <!-- Product Hero -->
  <section class="pt-20 pb-20 px-4 sm:px-6 lg:px-8 xl:px-12 bg-slate-800/30">
    <div class="container-custom px-4 sm:px-6">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-start">
        <!-- Product Images -->
        <FragranceGallery fragrance={{
          id: fragrance.id,
          name: fragrance.name,
          imagePath: fragrance.imagePath,
          images: fragrance.images
        }} />

        <!-- Product Info -->
        <div class="space-y-6 lg:space-y-8 text-center lg:text-left">
          <div>
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-100 mb-4" style="font-family: system-ui, -apple-system, sans-serif;">
              {fragrance.displayName}
            </h1>
            <p class="text-lg sm:text-xl text-slate-300 mb-6">
              Fragancia {fragrance.category} {genderText}
            </p>

            <!-- Consultar Precio Button -->
            <a
              href={`https://wa.me/573143799537?text=Hola%20DAR,%20me%20interesa%20saber%20el%20precio%20de%20${fragrance.displayName}`}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary bg-gradient-to-br from-rose-gold to-rose-gold-dark text-slate-900 hover:from-rose-gold hover:to-rose-gold-dark hover:scale-105 hover:shadow-2xl hover:shadow-rose-gold/25 transition-all duration-300 inline-flex items-center justify-center space-x-2 px-6 sm:px-8 py-3 sm:py-4 rounded-lg shadow-lg text-lg sm:text-xl font-bold"
            >
              <span>Consultar Precio</span>
              <img 
                src={whatsappIcon.src} 
                alt="WhatsApp" 
                class="w-5 h-5 sm:w-6 sm:h-6 object-contain"
              />
            </a>
          </div>

          <!-- Description -->
          <div class="space-y-6 lg:space-y-8">
            <div class="mb-6 lg:mb-8">
              <h3 class="text-lg sm:text-xl font-semibold text-slate-100 mb-3 sm:mb-4 text-center lg:text-left">Descripción</h3>
              <p class="text-slate-300 leading-relaxed text-center lg:text-left">
                {fragrance.displayName} es una fragancia {fragrance.category.toLowerCase()} {fragrance.gender.toLowerCase()}
                que captura la esencia de la elegancia y sofisticación. Importada directamente desde Dubai,
                esta fragancia ofrece una experiencia olfativa única e intensa.
              </p>
            </div>

            

            <!-- Notes -->
            <div class="mb-6 lg:mb-8">
              <h3 class="text-lg sm:text-xl font-semibold text-slate-100 mb-3 sm:mb-4 text-center lg:text-left">Notas Olfativas</h3>
              <div class="flex flex-wrap gap-2 justify-center lg:justify-start">
                {fragrance.notes.top && fragrance.notes.top.map((note, index) => (
                  <span class="px-3 py-1 rounded-full text-sm bg-transparent border border-rose-gold text-white hover:bg-rose-gold/10 transition-all duration-300">
                    {note}
                  </span>
                ))}
                {fragrance.notes.heart && fragrance.notes.heart.map((note, index) => (
                  <span class="px-3 py-1 rounded-full text-sm bg-transparent border border-rose-gold text-white hover:bg-rose-gold/10 transition-all duration-300">
                    {note}
                  </span>
                ))}
                {fragrance.notes.base && fragrance.notes.base.map((note, index) => (
                  <span class="px-3 py-1 rounded-full text-sm bg-transparent border border-rose-gold text-white hover:bg-rose-gold/10 transition-all duration-300">
                    {note}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Detailed Information -->
  <section class="py-12 bg-slate-800/30">
    <div class="container-custom px-4 sm:px-6">
      <!-- Individual Cards Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Occasions Cards -->
        <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-slate-800/50 to-slate-900/50 backdrop-blur-sm border border-slate-700/50 hover:border-rose-gold/30 transition-all duration-300 hover:scale-[1.02]">
          <div class="absolute inset-0 bg-gradient-to-br from-rose-gold/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative p-6 text-center">
            <h4 class="text-base font-semibold text-rose-gold uppercase tracking-wide mb-4">Ocasiones Ideales</h4>
            <div class="space-y-2">
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Eventos formales y ceremonias</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Uso diario profesional</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Reuniones de negocios</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Ocasiones especiales</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Application Card -->
        <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-slate-800/50 to-slate-900/50 backdrop-blur-sm border border-slate-700/50 hover:border-rose-gold/30 transition-all duration-300 hover:scale-[1.02]">
          <div class="absolute inset-0 bg-gradient-to-br from-rose-gold/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative p-6 text-center">
            <h4 class="text-base font-semibold text-rose-gold uppercase tracking-wide mb-4">Cómo Aplicar</h4>
            <div class="space-y-2">
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Aplicar en puntos de pulso</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">2-3 sprays son suficientes</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Aplicar 15 minutos antes</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Evitar frotar las zonas</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Ingredients Card -->
        <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-slate-800/50 to-slate-900/50 backdrop-blur-sm border border-slate-700/50 hover:border-rose-gold/30 transition-all duration-300 hover:scale-[1.02]">
          <div class="absolute inset-0 bg-gradient-to-br from-rose-gold/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative p-6 text-center">
            <h4 class="text-base font-semibold text-rose-gold uppercase tracking-wide mb-4">Ingredientes Premium</h4>
            <div class="space-y-2">
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Aceites esenciales de alta calidad</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Esencias naturales</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Fijadores premium</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Concentración del 20-25%</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Quality Guarantee Card -->
        <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-slate-800/50 to-slate-900/50 backdrop-blur-sm border border-slate-700/50 hover:border-rose-gold/30 transition-all duration-300 hover:scale-[1.02]">
          <div class="absolute inset-0 bg-gradient-to-br from-rose-gold/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative p-6 text-center">
            <h4 class="text-base font-semibold text-rose-gold uppercase tracking-wide mb-4">Garantía de Calidad</h4>
            <div class="space-y-2">
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">100% auténtico desde Dubai</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Certificado de autenticidad</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Empaque original sellado</span>
              </div>
              <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-700/40 transition-colors">
                <span class="text-sm text-slate-300">Garantía de satisfacción</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Volver a Fragancias Button -->
      <div class="mt-12 text-center">
        <a 
          href={currentFilter ? `/fragancias?filter=${currentFilter}` : '/fragancias'}
          class="inline-flex items-center justify-center space-x-2 px-6 py-3 rounded-lg bg-slate-700/50 hover:bg-slate-600/50 text-slate-300 hover:text-white transition-all duration-300 border border-slate-600/50 hover:border-rose-gold/50"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          <span>Volver a las Fragancias</span>
        </a>
      </div>
    </div>
  </section>
</main>

