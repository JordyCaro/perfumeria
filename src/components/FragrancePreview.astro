---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import FragranceGallery from '../components/FragranceGallery.astro';
import { Heart, Clock, Droplets, Sparkles, MessageCircle, BookOpen } from 'lucide-react';

export interface Props {
  fragrance: {
    id: string;
    name: string;
    displayName: string;
    gender: 'masculino' | 'femenino' | 'unisex';
    category: 'oriental' | 'amaderado' | 'floral' | 'fresco' | 'frutal' | 'especiado';
    imagePath: string;
    images: string[];
    notesImages: string[];
    hasImages: boolean;
  };
}

const { fragrance } = Astro.props;
const genderText = fragrance.gender === 'masculino' ? 'Masculina' : fragrance.gender === 'femenino' ? 'Femenina' : 'Unisex';
---

<main class="min-h-screen pt-20">

  <!-- Product Hero -->
  <section class="pt-20 pb-20 px-4 sm:px-6 lg:px-8 xl:px-12 bg-slate-800/30">
    <div class="container-custom px-4 sm:px-6">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-start">
        <!-- Product Images -->
        <FragranceGallery fragrance={{
          id: fragrance.id,
          name: fragrance.name,
          imagePath: fragrance.imagePath,
          images: fragrance.images
        }} />

        <!-- Product Info -->
        <div class="space-y-6 lg:space-y-8 text-center lg:text-left">
          <div>
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-100 mb-4" style="font-family: system-ui, -apple-system, sans-serif;">
              {fragrance.displayName}
            </h1>
            <p class="text-lg sm:text-xl text-slate-300 mb-6">
              Fragancia {fragrance.category} {genderText}
            </p>

            <!-- Consultar Precio Button -->
            <a
              href={`https://wa.me/573001234567?text=Hola%20DAR,%20me%20interesa%20saber%20el%20precio%20de%20${fragrance.displayName}`}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary bg-gradient-to-br from-rose-gold to-rose-gold-dark text-slate-900 hover:from-rose-gold-dark hover:to-rose-gold-darker transition-all duration-300 inline-flex items-center justify-center space-x-2 px-6 sm:px-8 py-3 sm:py-4 rounded-lg shadow-lg text-lg sm:text-xl font-bold"
            >
              <span>Consultar Precio</span>
                    <MessageCircle className="w-5 h-5 sm:w-6 sm:h-6" />
            </a>
          </div>

          <!-- Description -->
          <div class="space-y-6 lg:space-y-8">
            <div class="mb-6 lg:mb-8">
              <h3 class="text-lg sm:text-xl font-semibold text-slate-100 mb-3 sm:mb-4 text-center lg:text-left">Descripción</h3>
              <p class="text-slate-300 leading-relaxed text-center lg:text-left">
                {fragrance.displayName} es una fragancia {fragrance.category.toLowerCase()} {fragrance.gender.toLowerCase()}
                que captura la esencia de la elegancia y sofisticación. Importada directamente desde Dubai,
                esta fragancia ofrece una experiencia olfativa única e intensa.
              </p>
            </div>

            <!-- Notes -->
            <div class="mb-6 lg:mb-8">
              <h3 class="text-lg sm:text-xl font-semibold text-slate-100 mb-3 sm:mb-4 text-center lg:text-left">Notas Olfativas</h3>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <div class="card-glass text-center p-4">
                  <h4 class="font-semibold text-slate-100 mb-2">Salida</h4>
                  <p class="text-sm text-slate-300">Consultar</p>
                </div>
                <div class="card-glass text-center p-4">
                  <h4 class="font-semibold text-slate-100 mb-2">Corazón</h4>
                  <p class="text-sm text-slate-300">Consultar</p>
                </div>
                <div class="card-glass text-center p-4">
                  <h4 class="font-semibold text-slate-100 mb-2">Fondo</h4>
                  <p class="text-sm text-slate-300">Consultar</p>
                </div>
              </div>
            </div>

            <!-- Characteristics -->
            <div class="mb-6 lg:mb-8">
              <h3 class="text-lg sm:text-xl font-semibold text-slate-100 mb-3 sm:mb-4 text-center lg:text-left">Características</h3>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
                <div class="flex items-center justify-center lg:justify-start space-x-3">
                  <Clock className="w-4 h-4 sm:w-5 sm:h-5 text-yellow-400" />
                  <span class="text-sm sm:text-base text-slate-300">Duración: 8-12 horas</span>
                </div>
                <div class="flex items-center justify-center lg:justify-start space-x-3">
                  <Droplets className="w-4 h-4 sm:w-5 sm:h-5 text-yellow-400" />
                  <span class="text-sm sm:text-base text-slate-300">Proyección: Alta</span>
                </div>
                <div class="flex items-center justify-center lg:justify-start space-x-3">
                  <Heart className="w-4 h-4 sm:w-5 sm:h-5 text-yellow-400" />
                  <span class="text-sm sm:text-base text-slate-300">Intensidad: Fuerte</span>
                </div>
                <div class="flex items-center justify-center lg:justify-start space-x-3">
                  <Sparkles className="w-4 h-4 sm:w-5 sm:h-5 text-yellow-400" />
                  <span class="text-sm sm:text-base text-slate-300">Estación: Todo el año</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Detailed Information -->
  <section class="section-padding bg-slate-800/30">
    <div class="container-custom px-4 sm:px-6">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-16">
        <!-- Usage Recommendations -->
        <div class="card-glass p-4 sm:p-6">
          <h3 class="text-xl sm:text-2xl font-bold text-slate-100 mb-6 sm:mb-8 text-center">
            Recomendaciones de Uso
          </h3>
          <div class="space-y-6 sm:space-y-8">
            <div>
              <h4 class="text-base sm:text-lg font-semibold text-slate-100 mb-3 sm:mb-4 text-center">Ocasiones Ideales</h4>
              <ul class="space-y-2 sm:space-y-3 text-slate-300 list-disc pl-5 text-center sm:text-left">
                <li>Eventos formales y ceremonias</li>
                <li>Uso diario profesional</li>
                <li>Reuniones de negocios</li>
                <li>Ocasiones especiales</li>
              </ul>
            </div>
            <div>
              <h4 class="text-base sm:text-lg font-semibold text-slate-100 mb-3 sm:mb-4 text-center">Cómo Aplicar</h4>
              <ul class="space-y-2 sm:space-y-3 text-slate-300 list-disc pl-5 text-center sm:text-left">
                <li>Aplicar en puntos de pulso (muñecas, cuello)</li>
                <li>2-3 sprays son suficientes</li>
                <li>Aplicar 15 minutos antes de salir</li>
                <li>Evitar frotar las zonas aplicadas</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Materials & Quality -->
        <div class="card-glass p-4 sm:p-6">
          <h3 class="text-xl sm:text-2xl font-bold text-slate-100 mb-6 sm:mb-8 text-center">
            Materiales y Calidad
          </h3>
          <div class="space-y-6 sm:space-y-8">
            <div>
              <h4 class="text-base sm:text-lg font-semibold text-slate-100 mb-3 sm:mb-4 text-center">Ingredientes Premium</h4>
              <ul class="space-y-2 sm:space-y-3 text-slate-300 list-disc pl-5 text-center sm:text-left">
                <li>Aceites esenciales de alta calidad</li>
                <li>Esencias naturales</li>
                <li>Fijadores premium</li>
                <li>Concentración del 20-25%</li>
              </ul>
            </div>
            <div>
              <h4 class="text-base sm:text-lg font-semibold text-slate-100 mb-3 sm:mb-4 text-center">Garantía de Calidad</h4>
              <ul class="space-y-2 sm:space-y-3 text-slate-300 list-disc pl-5 text-center sm:text-left">
                <li>100% auténtico, importado desde Dubai</li>
                <li>Certificado de autenticidad incluido</li>
                <li>Empaque original y sellado</li>
                <li>Garantía de satisfacción</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
