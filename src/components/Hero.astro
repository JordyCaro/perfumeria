---
import { ArrowRight, Crown, Award } from 'lucide-react';
import fraganciasImage from '../../assets/images/hero/fragancias.jpeg';
---

<section id="inicio" class="relative min-h-screen flex items-center justify-center pt-32 overflow-x-hidden py-16">
  <!-- Elegant Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-dark-teal-dark via-dark-teal to-dark-teal-light">
    <!-- Subtle Pattern Overlay -->
    <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 2px 2px, rgba(193, 154, 107, 0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
    
    <!-- Sophisticated Glow -->
    <div class="absolute top-1/4 -left-20 w-96 h-96 bg-rose-gold/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 -right-20 w-80 h-80 bg-rose-gold-light/10 rounded-full blur-3xl"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-8 sm:px-12 lg:px-16 w-full">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left space-y-8">
        <!-- Crown Icon -->
        <div class="flex justify-center mb-4">
          <Crown className="w-12 h-12 text-rose-gold" />
        </div>

        <!-- Main Heading -->
        <div class="space-y-4">
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight">
            <span class="text-slate-100">Fragancias</span><br>
            <span class="text-gradient bg-gradient-to-r from-rose-gold-light via-rose-gold to-rose-gold-dark bg-clip-text text-transparent">Orientales</span><br>
            <span class="text-slate-200 text-3xl sm:text-4xl md:text-5xl lg:text-6xl">de Lujo</span>
          </h1>
        </div>

        <!-- Subtitle -->
        <p class="text-lg sm:text-xl text-slate-300 max-w-2xl mx-auto lg:mx-0 leading-relaxed font-light">
          Experimenta la <span class="text-rose-gold font-medium">elegancia y sofisticación</span> de las fragancias más 
          <span class="text-rose-gold font-medium">exquisitas</span> de Dubai. Cada fragancia cuenta una historia de 
          <span class="text-rose-gold font-medium">glamour y distinción</span>.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href="/fragancias" class="group relative inline-flex items-center justify-center space-x-2 bg-gradient-to-r from-rose-gold to-rose-gold-dark text-slate-900 font-semibold px-8 py-4 rounded-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:shadow-rose-gold/50">
            <span class="relative z-10">Explorar Colección</span>
            <ArrowRight className="w-5 h-5 relative z-10 group-hover:translate-x-1 transition-transform" />
            <div class="absolute inset-0 bg-gradient-to-r from-rose-gold-light to-rose-gold opacity-0 group-hover:opacity-100 transition-opacity"></div>
          </a>
          
            <a href="https://wa.me/573143799537?text=Hola%20DAR,%20me%20interesa%20conocer%20más%20sobre%20sus%20fragancias"
             target="_blank" 
             rel="noopener noreferrer"
             class="group inline-flex items-center justify-center space-x-2 border-2 border-rose-gold text-rose-gold-light font-semibold px-8 py-4 rounded-lg hover:bg-rose-gold/10 transition-all duration-300">
            <span>Asesoría Exclusiva</span>
            <Award className="w-5 h-5 group-hover:rotate-12 transition-transform" />
          </a>
        </div>

        <!-- Premium Features -->
        <div class="grid grid-cols-3 gap-2 sm:gap-4 lg:gap-6 pt-8 border-t border-rose-gold/20">
          <div class="text-center lg:text-left">
            <div class="text-lg sm:text-xl lg:text-2xl font-bold text-rose-gold mb-1 break-words">100%</div>
            <div class="text-xs text-slate-400 uppercase tracking-wider leading-tight">Auténticos</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-lg sm:text-xl lg:text-2xl font-bold text-rose-gold mb-1 break-words">Dubai</div>
            <div class="text-xs text-slate-400 uppercase tracking-wider leading-tight">Importación Directa</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-lg sm:text-xl lg:text-2xl font-bold text-rose-gold mb-1 break-words">Premium</div>
            <div class="text-xs text-slate-400 uppercase tracking-wider leading-tight">Calidad Garantizada</div>
          </div>
        </div>
      </div>

      <!-- Elegant Perfume Showcase -->
      <div class="relative hidden lg:flex items-center justify-center">
        <!-- Main Container with Elegant Shadow -->
        <div class="relative w-80 h-[420px]">
          <!-- Elegant Frame -->
          <div class="absolute inset-0 bg-gradient-to-br from-rose-gold/20 to-transparent rounded-3xl backdrop-blur-sm border border-rose-gold/30 shadow-2xl shadow-rose-gold/20"></div>
          
          <!-- Fragancias Image -->
          <div class="absolute inset-8 flex items-center justify-center">
            <img 
              src={fraganciasImage.src} 
              alt="Fragancias Orientales de Lujo" 
              class="w-full h-full object-contain rounded-2xl transform hover:scale-105 transition-transform duration-500"
            />
          </div>
          
          <!-- Floating Sparkles -->
          <div class="absolute top-10 right-10 w-2 h-2 bg-rose-gold rounded-full animate-pulse"></div>
          <div class="absolute top-20 left-10 w-1.5 h-1.5 bg-rose-gold-light rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
          <div class="absolute bottom-20 right-20 w-2 h-2 bg-rose-gold rounded-full animate-pulse" style="animation-delay: 1s;"></div>
          
          <!-- Elegant Corner Decorations -->
          <div class="absolute -top-3 -left-3 w-6 h-6 border-t-2 border-l-2 border-rose-gold/50"></div>
          <div class="absolute -top-3 -right-3 w-6 h-6 border-t-2 border-r-2 border-rose-gold/50"></div>
          <div class="absolute -bottom-3 -left-3 w-6 h-6 border-b-2 border-l-2 border-rose-gold/50"></div>
          <div class="absolute -bottom-3 -right-3 w-6 h-6 border-b-2 border-r-2 border-rose-gold/50"></div>
        </div>
      </div>
    </div>
  </div>
</section>