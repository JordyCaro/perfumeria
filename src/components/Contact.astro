---
import { Mail, Phone, MapPin, Clock, MessageCircle, Star, Sparkles, Heart } from 'lucide-react';
import whatsappIcon from '../../assets/icons/whatsapp.png';
---

<section id="contacto" class="py-16 bg-gradient-to-br from-dark-teal-dark via-dark-teal to-dark-teal-light overflow-x-hidden">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 w-full">
    <!-- Header -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center space-x-2 bg-rose-gold/10 border border-rose-gold/30 rounded-full px-4 py-2 mb-6">
        <Sparkles className="w-4 h-4 text-rose-gold" />
        <span class="text-sm text-rose-gold font-medium">Conecta con nosotros</span>
      </div>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-100 mb-4">
        <span class="text-gradient">Contáctanos</span>
      </h2>
      <p class="text-lg text-slate-300 max-w-2xl mx-auto">
        Encuentra tu fragancia perfecta con nuestra asesoría experta
      </p>
    </div>

    <!-- Main Contact Grid -->
    <div class="grid lg:grid-cols-3 gap-8">
      <!-- WhatsApp Card -->
      <div class="lg:col-span-2">
        <div class="relative bg-gradient-to-br from-green-500 to-green-600 rounded-2xl p-8 text-white overflow-hidden">
          <!-- Background Pattern -->
          <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -translate-y-16 translate-x-16"></div>
          <div class="absolute bottom-0 left-0 w-24 h-24 bg-white/10 rounded-full translate-y-12 -translate-x-12"></div>
          
          <div class="relative z-10">
            <div class="flex items-center space-x-4 mb-6">
              <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center">
                <img 
                  src={whatsappIcon.src} 
                  alt="WhatsApp" 
                  class="w-10 h-10 object-contain"
                />
              </div>
              <div>
                <h3 class="text-2xl font-bold">WhatsApp</h3>
                <p class="text-green-100">Respuesta inmediata</p>
              </div>
            </div>
            
            <p class="text-green-100 mb-6 text-lg">
              Chatea con nosotros para asesoría personalizada, consultas sobre productos y pedidos.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="https://wa.me/573143799537?text=Hola%20DAR,%20me%20interesa%20conocer%20más%20sobre%20sus%20fragancias" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="bg-white text-green-600 px-6 py-3 rounded-xl font-semibold hover:bg-green-50 transition-colors flex items-center justify-center space-x-2 group">
                <MessageCircle className="w-5 h-5" />
                <span>Chat Ahora</span>
              </a>
              
              <a href="https://wa.me/573143799537?text=Hola%20DAR,%20me%20interesa%20solicitar%20asesoría%20personalizada" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="border-2 border-white text-white px-6 py-3 rounded-xl font-semibold hover:bg-white/10 transition-colors flex items-center justify-center space-x-2 group">
                <Star className="w-5 h-5" />
                <span>Asesoría</span>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Phone Card -->
      <div class="lg:col-span-1">
        <div class="relative bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl p-6 text-white h-full">
          <!-- Background Pattern -->
          <div class="absolute top-0 right-0 w-20 h-20 bg-white/10 rounded-full -translate-y-10 translate-x-10"></div>
          
          <div class="relative z-10 h-full flex flex-col">
            <div class="flex items-center space-x-3 mb-4">
              <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
                <Phone className="w-6 h-6" />
              </div>
              <div>
                <h3 class="text-xl font-bold">Llamada</h3>
                <p class="text-blue-100 text-sm">Atención directa</p>
              </div>
            </div>
            
            <p class="text-blue-100 mb-6 flex-grow">
              Habla directamente con nuestro equipo para consultas urgentes.
            </p>
            
            <a href="tel:+573001234567" 
               class="w-full bg-white text-blue-600 px-4 py-3 rounded-xl font-semibold hover:bg-blue-50 transition-colors flex items-center justify-center space-x-2 group">
              <Phone className="w-5 h-5" />
              <span>Llamar</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Info Cards -->
    <div class="grid md:grid-cols-2 gap-6 mt-8">
      <!-- TODO: Implementar cuando se tenga correo configurado -->
      <!-- <div class="card-glass p-6 text-center group hover:scale-105 transition-transform">
        <div class="w-12 h-12 bg-rose-gold/20 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-rose-gold/30 transition-colors">
          <Mail className="w-6 h-6 text-rose-gold" />
        </div>
        <h4 class="text-lg font-semibold text-slate-100 mb-2">Email</h4>
        <p class="text-slate-300 text-sm mb-2">info@darcasadelaperfumeria.com</p>
        <p class="text-slate-400 text-xs">Respuesta en 24h</p>
      </div> -->

      <!-- Location Card -->
      <div class="card-glass p-6 text-center group hover:scale-105 transition-transform">
        <div class="w-12 h-12 bg-blue-500/20 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-blue-500/30 transition-colors">
          <MapPin className="w-6 h-6 text-blue-400" />
        </div>
        <h4 class="text-lg font-semibold text-slate-100 mb-2">Ubicación</h4>
        <p class="text-slate-300 text-sm mb-2">Medellín, Colombia</p>
        <p class="text-slate-400 text-xs">Envíos nacionales</p>
      </div>

      <!-- Hours Card -->
      <div class="card-glass p-6 text-center group hover:scale-105 transition-transform">
        <div class="w-12 h-12 bg-purple-500/20 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-purple-500/30 transition-colors">
          <Clock className="w-6 h-6 text-purple-400" />
        </div>
        <h4 class="text-lg font-semibold text-slate-100 mb-2">Horarios</h4>
        <p class="text-slate-300 text-sm mb-1">Lun-Vie: 9:00-18:00</p>
        <p class="text-slate-300 text-sm mb-2">Sáb: 9:00-14:00</p>
        <p class="text-slate-400 text-xs">Atención al cliente</p>
      </div>
    </div>

    <!-- Trust Badges -->
    <div class="mt-12">
      <div class="grid grid-cols-2 sm:flex sm:flex-wrap sm:justify-center gap-4 sm:gap-6 bg-slate-800/50 rounded-2xl px-4 sm:px-8 py-6">
        <div class="flex items-center space-x-2 justify-center">
          <div class="w-2 h-2 bg-rose-gold rounded-full flex-shrink-0"></div>
          <span class="text-slate-300 text-xs sm:text-sm whitespace-nowrap">100% Auténticos</span>
        </div>
        <div class="flex items-center space-x-2 justify-center">
          <div class="w-2 h-2 bg-rose-gold rounded-full flex-shrink-0"></div>
          <span class="text-slate-300 text-xs sm:text-sm whitespace-nowrap">Asesoría Experta</span>
        </div>
        <div class="flex items-center space-x-2 justify-center">
          <div class="w-2 h-2 bg-rose-gold rounded-full flex-shrink-0"></div>
          <span class="text-slate-300 text-xs sm:text-sm whitespace-nowrap">Envío Seguro</span>
        </div>
        <div class="flex items-center space-x-2 justify-center">
          <div class="w-2 h-2 bg-rose-gold rounded-full flex-shrink-0"></div>
          <span class="text-slate-300 text-xs sm:text-sm whitespace-nowrap">Garantía Total</span>
        </div>
      </div>
    </div>
  </div>
</section>