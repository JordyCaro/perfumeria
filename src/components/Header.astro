---
import { Menu, X } from 'lucide-react';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-slate-900/95 backdrop-blur-md border-b border-slate-800/50 shadow-lg">
  <div class="max-w-7xl mx-auto px-6">
    <nav class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-lg flex items-center justify-center shadow-lg">
          <span class="text-xl font-bold text-slate-900">D</span>
        </div>
        <div>
          <h1 class="text-xl font-bold text-slate-100">DAR</h1>
          <p class="text-xs text-yellow-400">Casa de la Perfumer√≠a</p>
        </div>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-8">
        <a href="/" class="text-slate-300 hover:text-yellow-400 transition-colors font-medium">
          Inicio
        </a>
        <a href="/fragancias" class="text-slate-300 hover:text-yellow-400 transition-colors font-medium">
          Fragancias
        </a>
        <a href="/#contacto" class="text-slate-300 hover:text-yellow-400 transition-colors font-medium">
          Contacto
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="flex items-center">
        <button id="mobile-menu-button" class="lg:hidden flex items-center justify-center w-10 h-10 bg-slate-800/50 rounded-lg text-slate-300 hover:text-yellow-400 hover:bg-slate-700/50 transition-colors">
          <Menu class="w-6 h-6" />
        </button>
      </div>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden fixed top-16 left-0 right-0 bg-slate-900/95 backdrop-blur-md border-b border-slate-800/50 transform -translate-y-full transition-transform duration-300 ease-in-out shadow-lg">
    <div class="max-w-7xl mx-auto px-6 py-6">
      <nav class="space-y-4">
        <a href="/" class="block text-slate-300 hover:text-yellow-400 transition-colors font-medium py-2">
          Inicio
        </a>
        <a href="/fragancias" class="block text-slate-300 hover:text-yellow-400 transition-colors font-medium py-2">
          Fragancias
        </a>
        <a href="/#contacto" class="block text-slate-300 hover:text-yellow-400 transition-colors font-medium py-2">
          Contacto
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  let isMenuOpen = false;

  mobileMenuButton?.addEventListener('click', () => {
    isMenuOpen = !isMenuOpen;
    
    if (isMenuOpen) {
      mobileMenu.classList.remove('-translate-y-full');
      mobileMenu.classList.add('translate-y-0');
    } else {
      mobileMenu.classList.add('-translate-y-full');
      mobileMenu.classList.remove('translate-y-0');
    }
  });

  // Close mobile menu when clicking on a link
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      isMenuOpen = false;
      mobileMenu.classList.add('-translate-y-full');
      mobileMenu.classList.remove('translate-y-0');
    });
  });

  // Smooth scrolling for navigation links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>

<style>
  /* Smooth transitions for mobile menu */
  #mobile-menu {
    transition: transform 0.3s ease-in-out;
  }
  
  /* Header backdrop blur enhancement */
  header {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }
</style>