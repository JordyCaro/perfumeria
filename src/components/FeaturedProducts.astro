---
// Datos de productos destacados de Lattafa
const featuredProducts = [
  {
    id: 1,
    name: "Lattafa Khamrah",
    description: "Una fragancia oriental cálida con notas de canela, dátiles y vainilla",
    price: "₡89.900",
    originalPrice: "₡119.900",
    image: "/images/khamrah.jpg",
    notes: ["Oriental", "Dulce", "Especiado"],
    gender: "Unisex",
    occasion: "Noche",
    rating: 4.8,
    reviews: 156
  },
  {
    id: 2,
    name: "Lattafa Asad",
    description: "Fragancia masculina fresca con notas cítricas y especiadas",
    price: "₡79.900",
    originalPrice: "₡99.900",
    image: "/images/asad.jpg",
    notes: ["Cítrico", "Especiado", "Amaderado"],
    gender: "Hombre",
    occasion: "Día",
    rating: 4.6,
    reviews: 89
  },
  {
    id: 3,
    name: "Lattafa Yara",
    description: "Fragancia floral dulce con notas de heliotropo y vainilla",
    price: "₡69.900",
    originalPrice: "₡89.900",
    image: "/images/yara.jpg",
    notes: ["Floral", "Dulce", "Vainilla"],
    gender: "Mujer",
    occasion: "Día",
    rating: 4.7,
    reviews: 203
  },
  {
    id: 4,
    name: "Lattafa Badee Al Oud",
    description: "Fragancia oriental intensa con notas de oud y especias",
    price: "₡99.900",
    originalPrice: "₡129.900",
    image: "/images/badee-al-oud.jpg",
    notes: ["Oud", "Oriental", "Especiado"],
    gender: "Unisex",
    occasion: "Noche",
    rating: 4.9,
    reviews: 67
  }
];
---

<section class="section-padding bg-slate-800/30 py-16">
  <div class="container-custom">
    <div class="text-center mb-16">
      <div class="inline-flex items-center space-x-2 bg-slate-800/50 backdrop-blur-sm border border-yellow-600/30 rounded-full px-4 py-2 mb-6">
        <span class="text-sm text-yellow-400 font-medium">Productos Destacados</span>
      </div>
      <h2 class="text-4xl lg:text-5xl font-playfair font-bold text-shadow mb-6">
        <span class="text-gradient">Fragancias</span> Más Populares
      </h2>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">
        Descubre nuestra selección de perfumes Lattafa más vendidos, 
        cuidadosamente elegidos por su calidad y popularidad en Colombia.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {featuredProducts.map((product) => (
        <div class="fragrance-card group">
          <!-- Product Image -->
          <div class="relative mb-6 overflow-hidden rounded-xl">
            <div class="aspect-square bg-gradient-to-br from-slate-700 to-slate-800 rounded-xl flex items-center justify-center group-hover:scale-105 transition-transform duration-500">
              <div class="w-24 h-32 bg-gradient-to-b from-yellow-500 to-yellow-600 rounded-lg shadow-lg"></div>
            </div>
            
            <!-- Discount Badge -->
            <div class="absolute top-3 left-3 bg-red-600 text-white text-xs font-bold px-2 py-1 rounded-full">
              -25%
            </div>
            
            <!-- Gender Badge -->
            <div class={`absolute top-3 right-3 px-2 py-1 rounded-full text-xs font-medium ${
              product.gender === 'Hombre' ? 'bg-blue-600 text-blue-100' :
              product.gender === 'Mujer' ? 'bg-pink-600 text-pink-100' :
              'bg-purple-600 text-purple-100'
            }`}>
              {product.gender}
            </div>
          </div>

          <!-- Product Info -->
          <div class="space-y-4">
            <div>
              <h3 class="text-lg font-semibold text-slate-100 mb-2 group-hover:text-yellow-400 transition-colors duration-300">
                {product.name}
              </h3>
              <p class="text-sm text-slate-400 line-clamp-2">
                {product.description}
              </p>
            </div>

            <!-- Notes -->
            <div class="flex flex-wrap gap-2">
              {product.notes.map((note) => (
                <span class={`note-tag ${
                  note === 'Floral' ? 'floral' :
                  note === 'Amaderado' || note === 'Oud' ? 'woody' :
                  note === 'Cítrico' ? 'citrus' :
                  note === 'Oriental' || note === 'Especiado' ? 'oriental' :
                  note === 'Dulce' || note === 'Vainilla' ? 'gourmand' :
                  'fruity'
                }`}>
                  {note}
                </span>
              ))}
            </div>

            <!-- Rating -->
            <div class="flex items-center space-x-2">
              <div class="flex items-center space-x-1">
                {[...Array(5)].map((_, i) => (
                  <svg class={`w-4 h-4 ${i < Math.floor(product.rating) ? 'text-yellow-400' : 'text-slate-600'}`} fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <span class="text-sm text-slate-400">
                {product.rating} ({product.reviews} reseñas)
              </span>
            </div>

            <!-- Price -->
            <div class="flex items-center justify-between">
              <div>
                <span class="text-2xl font-bold text-yellow-400">{product.price}</span>
                <span class="text-sm text-slate-500 line-through ml-2">{product.originalPrice}</span>
              </div>
              <button class="btn-primary text-sm px-4 py-2">
                Ver Detalles
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- View All Button -->
    <div class="text-center mt-12">
      <a href="/fragancias" class="btn-secondary inline-flex items-center space-x-2">
        <span>Ver Catálogo Completo</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>