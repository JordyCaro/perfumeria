    price: 65000,
    image: "https://images.unsplash.com/photo-1592945403244-b3fbafd7f539?w=400&h=400&fit=crop",
    description: "Fresco y energético, ideal para el uso diario del hombre activo.",
    notes: ["Limón", "Bergamota", "Lavanda", "Menta", "Musk"],
    occasion: "día",
    rating: 4.5,
    stock: 18
  },
  {
    id: 6,
    name: "Lattafa Ana Abiyedh",
    gender: "femenino",
    category: "floral",
    price: 72000,
    image: "https://images.unsplash.com/photo-1541643600914-78b084683601?w=400&h=400&fit=crop",
    description: "Elegante y sofisticada, con notas florales y frutales delicadas.",
    notes: ["Pera", "Fresia", "Jazmín", "Ámbar", "Musk"],
    occasion: "día",
    rating: 4.7,
    stock: 14
