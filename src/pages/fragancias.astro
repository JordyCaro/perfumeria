  // Funci贸n para intercalar fragancias por g茅nero
  function interleaveFragrances(fragrances) {
    const mujeres = fragrances.filter(f => f.gender === 'mujer');
    const hombres = fragrances.filter(f => f.gender === 'hombre');
    const unisex = fragrances.filter(f => f.gender === 'unisex');
    
    const interleaved = [];
    const maxLength = Math.max(mujeres.length, hombres.length, unisex.length);
    
    for (let i = 0; i < maxLength; i++) {
      if (mujeres[i]) interleaved.push(mujeres[i]);
      if (hombres[i]) interleaved.push(hombres[i]);
      if (unisex[i]) interleaved.push(unisex[i]);
    }
    
    return interleaved;
  }

