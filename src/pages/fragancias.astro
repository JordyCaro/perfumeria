---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import { Search } from 'lucide-react';
import { fragrances, getFirstImage } from '../data/fragrances';
---

<Layout title="Fragancias - DAR Casa de la PerfumerÃ­a" description="Descubre nuestra colecciÃ³n completa de fragancias orientales para hombres y mujeres. Filtra por gÃ©nero, ocasiÃ³n y estilo para encontrar tu fragancia perfecta.">
  <Header />
  <WhatsAppButton />
  
  <main class="min-h-screen pt-20">
    <!-- Hero Section -->
    <section class="py-12 bg-gradient-to-br from-dark-teal-dark via-dark-teal to-dark-teal-light relative">
      <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle at 2px 2px, rgba(193, 154, 107, 0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
      <div class="absolute top-1/4 -left-20 w-96 h-96 bg-rose-gold/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 -right-20 w-80 h-80 bg-rose-gold-light/5 rounded-full blur-3xl"></div>
      <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16 relative z-10">
        <div class="text-center mb-8">
          <h1 class="text-3xl lg:text-4xl font-bold text-slate-100 mb-4">
            Nuestras <span class="text-gradient">Fragancias</span>
          </h1>
          <p class="text-lg text-slate-300 max-w-2xl mx-auto">
            Descubre nuestra colecciÃ³n completa de fragancias orientales autÃ©nticas, 
            importadas directamente desde Dubai. Filtra y encuentra tu fragancia perfecta.
          </p>
        </div>
      </div>
    </section>

    <!-- Filters Section -->
    <section class="py-8 bg-gradient-to-br from-dark-teal to-dark-teal-light relative overflow-x-hidden">
      <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 2px 2px, rgba(193, 154, 107, 0.1) 1px, transparent 0); background-size: 30px 30px;"></div>
      <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16 w-full relative z-10">
        <div class="card-glass">
          <!-- Combined Filters -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <!-- Search Bar -->
            <div class="relative w-full">
              <input 
                type="text" 
                placeholder="Buscar fragancias..." 
                class="w-full px-4 py-3 bg-slate-700/50 border border-slate-600 rounded-lg text-slate-100 placeholder-slate-400 focus:outline-none focus:border-rose-gold focus:ring-2 focus:ring-rose-gold/20 transition-colors"
                id="search-input"
              />
            </div>
            
            <!-- Gender Filter -->
            <select class="w-full bg-slate-700/50 border border-slate-600 rounded-lg text-slate-100 px-4 py-3 focus:outline-none focus:border-rose-gold focus:ring-2 focus:ring-rose-gold/20 transition-colors cursor-pointer" id="gender-filter">
              <option value="">Todas</option>
              <option value="masculino">Hombres</option>
              <option value="femenino">Mujeres</option>
              <option value="unisex">Unisex</option>
            </select>
          </div>
        </div>
      </div>
    </section>

    <!-- Fragrances Grid -->
    <section class="py-12 bg-gradient-to-br from-dark-teal-light via-dark-teal to-dark-teal-dark relative overflow-x-hidden">
      <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 2px 2px, rgba(193, 154, 107, 0.08) 1px, transparent 0); background-size: 25px 25px;"></div>
      <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16 w-full relative z-10">
        <div class="mb-8">
          <h2 class="text-3xl font-bold text-slate-100">
            <span id="fragrance-count">{fragrances.length}</span> Fragancias Encontradas
          </h2>
        </div>

        <!-- Fragrances Grid -->
        <div id="fragrances-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
          {fragrances.map((fragrance, index) => {
            const genderText = fragrance.gender === 'masculino' ? 'Masculina' : fragrance.gender === 'femenino' ? 'Femenina' : 'Unisex';
            const imageSrc = getFirstImage(fragrance);

            return (
              <div class="card-glass group hover:scale-105 transition-transform duration-300 h-full flex flex-col">
                <a href={`/perfumes/${fragrance.id}`} class="block">
                  <div class="aspect-square bg-gradient-to-br from-rose-gold to-rose-gold-dark rounded-xl mb-6 overflow-hidden group-hover:scale-105 transition-transform cursor-pointer">
                    {imageSrc && imageSrc !== '/assets/images/placeholder.jpg' ? (
                      <img src={imageSrc} alt={fragrance.displayName} class="w-full h-full object-cover" />
                    ) : (
                      <div class="w-full h-full flex items-center justify-center">
                        <span class="text-6xl">ðŸ§´</span>
                      </div>
                    )}
                  </div>
                </a>
                <div class="text-center flex-1 flex flex-col">
                  <a href={`/perfumes/${fragrance.id}`} class="block cursor-pointer">
                    <h3 class="text-xl font-semibold text-slate-100 mb-2">{fragrance.displayName}</h3>
                  </a>
                  <p class="text-sm text-slate-400 mb-3">{genderText}</p>
                  <p class="text-sm text-slate-300 mb-4 flex-1">{fragrance.displayName} es una fragancia {fragrance.category} {fragrance.gender} que ofrece una experiencia olfativa Ãºnica e intensa.</p>
                  <div class="flex items-center justify-between mb-4">
                    <span class="text-xs text-slate-400">8-12h</span>
                    <div class="flex items-center space-x-1">
                      {[...Array(5)].map(() => (
                        <span class="text-yellow-400">â˜…</span>
                      ))}
                    </div>
                  </div>
                  <a href={`/perfumes/${fragrance.id}`} class="btn-secondary w-full text-center">
                    Consultar Precio
                  </a>
                </div>
              </div>
            );
          })}
        </div>

      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script define:vars={{ fragrancesData: fragrances }}>
  let filteredFragrances = [...fragrancesData];

  // Filter functions
    function filterFragrances() {
    const searchInput = document.getElementById('search-input');
    const genderSelect = document.getElementById('gender-filter');

    const searchTerm = searchInput ? searchInput.value.toLowerCase() : '';
    const genderFilter = genderSelect ? genderSelect.value : '';

    filteredFragrances = fragrancesData.filter(fragrance => {
        // Search filter
      if (searchTerm && !fragrance.displayName.toLowerCase().includes(searchTerm) && 
          !fragrance.name.toLowerCase().includes(searchTerm)) {
          return false;
        }

        // Gender filter
        if (genderFilter && fragrance.gender !== genderFilter) {
          return false;
        }

        return true;
      });

      updateFragranceGrid();
    }

  function updateFragranceGrid() {
    const grid = document.getElementById('fragrances-grid');
    const count = document.getElementById('fragrance-count');
    
    if (!grid || !count) {
      console.error('Required DOM elements not found');
      return;
    }
    
    count.textContent = filteredFragrances.length.toString();

    // Clear the grid
    grid.innerHTML = '';

    // Add filtered cards
    filteredFragrances.forEach((fragrance, index) => {
      const genderText = fragrance.gender === 'masculino' ? 'Masculina' : fragrance.gender === 'femenino' ? 'Femenina' : 'Unisex';
      const imageSrc = fragrance.images && fragrance.images.length > 0 
        ? `${fragrance.imagePath}/${fragrance.images[0]}` 
        : '/assets/images/placeholder.jpg';

      const cardHTML = `
          <div class="card-glass group hover:scale-105 transition-transform duration-300 h-full flex flex-col">
          <a href="/perfumes/${fragrance.id}" class="block">
            <div class="aspect-square bg-gradient-to-br from-rose-gold to-rose-gold-dark rounded-xl mb-6 overflow-hidden group-hover:scale-105 transition-transform cursor-pointer">
              ${imageSrc !== '/assets/images/placeholder.jpg' ? 
                `<img src="${imageSrc}" alt="${fragrance.displayName}" class="w-full h-full object-cover" />` :
                `<div class="w-full h-full flex items-center justify-center">
                  <span class="text-6xl">ðŸ§´</span>
                </div>`
              }
              </div>
            </a>
            <div class="text-center flex-1 flex flex-col">
            <a href="/perfumes/${fragrance.id}" class="block cursor-pointer">
              <h3 class="text-xl font-semibold text-slate-100 mb-2">${fragrance.displayName}</h3>
              </a>
            <p class="text-sm text-slate-400 mb-3">${genderText}</p>
            <p class="text-sm text-slate-300 mb-4 flex-1">${fragrance.displayName} es una fragancia ${fragrance.category} ${fragrance.gender} que ofrece una experiencia olfativa Ãºnica e intensa.</p>
              <div class="flex items-center justify-between mb-4">
              <span class="text-xs text-slate-400">8-12h</span>
              <div class="flex items-center space-x-1">
                ${[...Array(5)].map(() => '<span class="text-yellow-400">â˜…</span>').join('')}
              </div>
            </div>
            <a href="/perfumes/${fragrance.id}" class="btn-secondary w-full text-center">
              Consultar Precio
              </a>
            </div>
          </div>
        `;
      
      grid.insertAdjacentHTML('beforeend', cardHTML);
    });
  }

  // Check URL parameters on load
  function initializeFromURL() {
    const urlParams = new URLSearchParams(window.location.search);
    const filterParam = urlParams.get('filter');
    
      const genderFilter = document.getElementById('gender-filter');
    if (filterParam && genderFilter) {
        genderFilter.value = filterParam;
        filterFragrances();
    }
  }

  // Initialize when DOM is ready
  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM loaded, initializing fragancias page');
    console.log('Total fragrances:', fragrancesData.length);
    
    // Event listeners
    const searchInput = document.getElementById('search-input');
    const genderFilter = document.getElementById('gender-filter');
    
    if (searchInput) searchInput.addEventListener('input', filterFragrances);
    if (genderFilter) genderFilter.addEventListener('change', filterFragrances);
    
    initializeFromURL();
  });
</script>
